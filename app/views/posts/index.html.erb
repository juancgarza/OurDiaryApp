    <% @posts.each do |post| %>
      <div class="box">
        <div class="panel panel-default">
        <div class="panel panel-heading center">
          <h1><%= post.title %></h1>
        </div>
        <div class="panel panel-body center">
          <%= link_to image_tag(post.image.url(:medium)) , post %> <br/>
          <p><%= post.body %></p>
        </div>
        <div class="panel-footer">
          Submitted at <%= post.created_at %>
          <%= link_to 'Destroy', post , method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
    <% end %>

  </tbody>
</table>
